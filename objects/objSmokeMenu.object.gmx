buttonCount = array_length_1d(menuButton)

for (var i = 0; i &lt; buttonCount; i ++) {
    //x pos
    if i &lt;= 7 {
        buttonxPos = x - sprite_get_width(sprSmokeMenu)/2 + ((i + 1)*buttonBuffer) + (i*sprite_get_width(sprPickButton))
    } else {
        buttonxPos = x - sprite_get_width(sprSmokeMenu)/2 + ((i - 7)*buttonBuffer) + ((i- 8)*sprite_get_width(sprPickButton))
    }
    //y pos
    if i &lt;= 7 {
        buttonyPos = y - sprite_get_height(sprSmokeMenu)/2 - buttonBuffer - sprite_get_width(sprPickButton)
    } else {
        buttonyPos = y - sprite_get_height(sprSmokeMenu)/2 + buttonBuffer*2
    }
    button[i] = instance_create(buttonxPos, buttonyPos, menuButton[i])
    instance_deactivate_object(button[i])
}
