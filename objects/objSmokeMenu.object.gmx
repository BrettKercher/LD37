//opening and closing "animation"
if open {
    image_xscale += .02
    image_yscale += .02
    image_alpha += .02
} else {
    image_xscale -= .02
    image_yscale -= .02
    image_alpha -= .02
    for (i = 0; i &lt; buttonCount; i ++) {
        instance_deactivate_object(button[i])
    }
}

//brings up buttons
if image_alpha = 1 {
    for (i = 0; i &lt; buttonCount; i ++) {
        instance_activate_object(button[i])
    }
}
//stops it from growing forever
scrImageClamp()

//this part is triggered by the end of the crafting animation on the man
if doneCrafting = true {
    canCraft = true
    doneCrafting = false
    objGame.resources[WOOD] -= queueItem.woodCost;
    objGame.resources[ROCK] -= queueItem.rockCost;
    objGame.resources[FOOD] -= queueItem.foodCost;
    objGame.resources[SAP] -= queueItem.sapCost;
    objGame.resources[GEM] -= queueItem.gemCost;
    objGame.resources[FUR] -= queueItem.furCost;
    objGame.resources[ECTO] -= queueItem.ectoCost
    switch (queueItem){
        case objPickButton.id:
            objGame.tools[PICK] ++
            objGame.hasBoughtPick = true
            break;
        case objAxeButton.id:
            objGame.tools[AXE] ++
            objGame.hasBoughtAxe = true
            break;
        case objSpearButton.id:
            objGame.tools[SPEAR] ++
            objGame.hasBoughtSpear = true
            break;
        case objGlassButton.id:
            objGame.glassCount++
            objIdol.image_index = objGame.glassCount
            break;
        case objBedButton.id:
            objGame.newPersonCount++;
            break;
        case objStewButton.id:
            with objMan {
                energy += (fullEnergy - energy) /2
            }
            break;
        case objArtButton.id:
            objGame.artCount ++
            objRoomInside.image_index = objGame.artCount
            break;
        case objBrickButton.id:
            objGame.brickCount ++
            break;
        case objGourmetButton.id:
            with objMan {
                energy = fullEnergy
            }
            default:
            show_debug_message("here")
            break;
    }
}
    
