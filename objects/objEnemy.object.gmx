            with combatTarget {
                if objGame.selected == self {
                    with objIndicator { 
                        instance_destroy() 
                    }
                    objGame.selected = noone
                }
                with objWaypoint {
                    show_debug_message("here")
                    if owner == other {
                        instance_destroy()
                    }
                }
                scrManDeath()
            }
            combatTarget = noone
        } else {
            with combatTarget {
                if canAttack = true{
                    state = scrStateCombat
                    idleTime = 0
                    combatTarget = other
                    attacking = true
                }
            }
        } 
    }
}
