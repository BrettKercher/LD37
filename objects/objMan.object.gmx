            <string>
script_execute(state)

//energy down
energy -= .01
if energy &lt;= 0 {
    energy = 0
}

if energy &lt;= 0 {
    weak = true;  
} else {
    weak = false;
}

//facing
if hspeed &lt; 0 {
    image_xscale = -1
} else if hspeed &gt; 0 {
    image_xscale = 1
}

//new facing will override the old one if there's a ghosty to punch
if combatTarget != noone and attacking {
    dir = point_direction(x, y, combatTarget.x, combatTarget.y)
    if  dir &lt; 20 {
        image_xscale = 1
    } else if 160 &lt; dir &lt; 180 {
        image_xscale = -1    
    }
}

//attacking stuff
if !ds_stack_empty(held) {
    canAttack = false
}
if attacking = true {
    hspeed = 0
    image_speed = .14
}

//collision
if(!place_free(x + hspeed, y))
{
    hspeed = 0;
    collided = true;
}

//Light Flickering
var dif = choose(0.05, -0.05, 0);
glowIntensity += dif;
glowIntensity = clamp(glowIntensity, baseGlowIntensity - maxFlickerRange, baseGlowIntensity + maxFlickerRange);
</string>
